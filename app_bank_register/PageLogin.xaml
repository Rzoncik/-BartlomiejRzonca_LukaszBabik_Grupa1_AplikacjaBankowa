<Page x:Class="app_bank_register.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:app_bank_register"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="799*"/>
        </Grid.ColumnDefinitions>
        <Frame Background="white" Grid.ColumnSpan="2"/>
        <TextBox x:Name="inputId" HorizontalAlignment="Left" Margin="14,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <PasswordBox x:Name="inputPass" HorizontalAlignment="Left" Margin="14,130,0,0" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Button x:Name="btn_validate_login" Content="Zaloguj się" HorizontalAlignment="Left" Margin="14,161,0,0" VerticalAlignment="Top" Click="btn_validate_login_Click" Grid.Column="1"/>
        <TextBlock Margin="14,186,-15,-186" Grid.Column="1">
    <Hyperlink Click="Register_Click">Zarejestruj się</Hyperlink>
        </TextBlock>
        <Label Content="Logowanie" HorizontalAlignment="Left" Margin="9,10,0,0" VerticalAlignment="Top" FontSize="24" Grid.Column="1"/>
        <Label Content="Identyfikator" HorizontalAlignment="Left" Margin="9,57,0,0" VerticalAlignment="Top" FontSize="11" Grid.Column="1"/>
        <Label Content="Hasło" HorizontalAlignment="Left" Margin="9,105,0,0" VerticalAlignment="Top" FontSize="11" Grid.Column="1"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1"/>
        <Label Content="Label" HorizontalAlignment="Left" Height="10" Margin="53,0,0,0" VerticalAlignment="Top" Width="28" Grid.Column="1"/>
    </Grid>
</Page>
