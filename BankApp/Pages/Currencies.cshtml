@page
@model BankApp.Pages.CurrenciesModel
@{
    ViewData["Title"] = "Kursy walut";
    Layout = "Shared/_DashboardLayout";
}

<h2 class="mb-3">Aktualne kursy walut</h2>

<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>Nazwa waluty</th>
        <th>Kod</th>
        <th>Kurs&nbsp;[PLN]</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var r in Model.Rates)
    {
        <tr>
            <td>@r.Name</td>
            <td class="text-center fw-bold">@r.Code</td>
            <td class="text-end">
                @r.RatePln.ToString("F4", new System.Globalization.CultureInfo("pl-PL")) zł
            </td>
        </tr>
    }
    </tbody>
</table>

