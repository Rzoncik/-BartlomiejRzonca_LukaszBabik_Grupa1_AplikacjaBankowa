@page
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@model ChangeUserDataModel
@{
    ViewData["Title"] = "Edytuj konto";
    Layout = "Shared/_DashboardLayout";
}

<h3 class="mt-3">Zmie≈Ñ swoje dane</h3>

<form method="post" class="container">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- PASSWORD -->
    <div class="input-field">
        <input asp-for="Input.Password" type="password" autocomplete="new-password"/>
        <label asp-for="Input.Password"></label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="input-field">
        <input asp-for="Input.PasswordConfirm" type="password" autocomplete="new-password"/>
        <label asp-for="Input.PasswordConfirm"></label>
        <span asp-validation-for="Input.PasswordConfirm" class="text-danger"></span>
    </div>

    <!-- ADDRESS -->
    <div class="input-field">
        <input asp-for="Input.City"/>
        <label asp-for="Input.City"></label>
        <span asp-validation-for="Input.City" class="text-danger"></span>
    </div>

    <div class="input-field">
        <input asp-for="Input.StreetAndBuilding"/>
        <label asp-for="Input.StreetAndBuilding"></label>
        <span asp-validation-for="Input.StreetAndBuilding" class="text-danger"></span>
    </div>

    <div class="input-field">
        <input asp-for="Input.Apartment"/>
        <label asp-for="Input.Apartment"></label>
        <span asp-validation-for="Input.Apartment" class="text-danger"></span>
    </div>

    <div class="input-field">
        <input asp-for="Input.PostalCode"/>
        <label asp-for="Input.PostalCode"></label>
        <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
    </div>

    <!-- CONTACT -->
    <div class="input-field">
        <input asp-for="Input.PhoneNumber"/>
        <label asp-for="Input.PhoneNumber"></label>
        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
    </div>

    <div class="input-field">
        <input asp-for="Input.Email"/>
        <label asp-for="Input.Email"></label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <button class="btn waves-effect waves-light" type="submit">
        Zapisz zmiany
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}