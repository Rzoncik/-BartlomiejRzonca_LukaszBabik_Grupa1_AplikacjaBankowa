@page
@model BankApp.Pages.SendTransferModel
@{
    ViewData["Title"] = "Wyślij przelew";
    Layout = "Shared/_DashboardLayout";
}

<h1 class="mb-4">Przelew wewnętrzny</h1>

<form method="post">
    
    <div class="mb-3">
        <label asp-for="ReceiversName" class="form-label"></label>
        <input asp-for="ReceiversName" class="form-control"/>
        <span asp-validation-for="ReceiversName" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="ReceiverIban" class="form-label"></label>
        <input asp-for="ReceiverIban" class="form-control"/>
        <span asp-validation-for="ReceiverIban" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Amount" class="form-label"></label>
        <input asp-for="Amount" class="form-control" step="0.01"/>
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" placeholder="(opcjonalnie)"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit">Wyślij</button>
    
</form>

<partial name="_ValidationScriptsPartial"/>